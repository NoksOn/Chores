<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

<EditText
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/nameField"
        android:hint="Your Chore"
        android:textSize="14sp"/><EditText
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/assignToField"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:hint="Assign to"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignParentLeft="true"
        android:textSize="14sp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/nameField"/><EditText
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/assignByField"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:hint="Assign By"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignParentLeft="true"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/assignToField"/>
    <Button
            android:text="Okey"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/dialogOk"
            android:typeface="serif"
            android:textSize="14sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:layout_marginBottom="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/assignByField"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/dialogCancel"
            android:typeface="serif"
            android:textSize="14sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/assignByField"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/dialogOk"
            android:layout_toRightOf="@+id/dialogOk"/></RelativeLayout>